@{
}

@model List<Application>

<h1>Movies in the database</h1>

<table class="table table-bordered">
    <thead class="fw-bold">
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Category</th>
            <th>Director</th>
            <th>Rating</th>
        </tr>
    </thead>
    @foreach(var x in Model) 
    {
    <tbody>
        <tr>
            <td>@x.title</td>
            <td>@x.year</td>
            <td>@x.category</td>
            <td>@x.director</td>
            <td>@x.rating</td>

            <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieID">Edit</a></td>
            <td><a class="btn btn-danger">Delete</a></td>
        </tr>
    </tbody>
    }
</table>