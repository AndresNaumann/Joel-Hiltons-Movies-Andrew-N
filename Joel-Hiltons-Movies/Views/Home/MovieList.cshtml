@{
}

@model List<Application>

<h1>Movies in the database</h1>

<table class="table table-bordered">
    <thead class="fw-bold">
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Category</th>
            <th>Director</th>
            <th>Rating</th>
        </tr>
    </thead>
    @foreach(var x in Model) 
    {
    <tbody>
        <tr>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Category</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>

            <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a></td>
            <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a></td>
        </tr>
    </tbody>
    }
</table>